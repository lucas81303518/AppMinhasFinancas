unit UF_Cadastros;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants, 
  FMX.Types, FMX.Graphics, FMX.Controls, FMX.Forms, FMX.Dialogs, FMX.StdCtrls,
  FMX.Controls.Presentation, FMX.Objects, UF_BaseMenu;

type
  TF_Cadastros = class(TF_BaseMenu)
    lblTitulo: TLabel;
    recEntradas: TRectangle;
    Label1: TLabel;
    recSaidas: TRectangle;
    Label2: TLabel;
    recTipoDeContas: TRectangle;
    Label3: TLabel;
    recMetas: TRectangle;
    Label4: TLabel;
    procedure recEntradasClick(Sender: TObject);
    procedure imageCadastroClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  F_Cadastros: TF_Cadastros;

implementation

uses
  UF_CadEntradas;

{$R *.fmx}

procedure TF_Cadastros.imageCadastroClick(Sender: TObject);
begin
  recEntradasClick(Sender);
end;

procedure TF_Cadastros.recEntradasClick(Sender: TObject);
begin
  if not Assigned(F_CadEntradas) then
  begin
    F_CadEntradas := TF_CadEntradas.Create(Self);
    F_CadEntradas.Show;
  end;
end;

end.
